@using HRM.Entity;
@using HRM.Entity.Facade;
@{
    ViewBag.Title = "IndividualSalaryInfo";
}

<div style="text-align: center" class="container">
    <h2>Salary Calculation Details</h2> <hr />
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-info">
                <div class="panel-body">
                    @foreach (EmployeeTotalSalary item in ViewBag.Result)
                    {
                        <p>Employee</p> @item.EmployeeName
                        <br />
                        <p>Basic Salary :    @item.BasicSalary</p>
                        <p>Bonus :           @item.BonusSalary</p>
                        <p><b>Total Salary : @item.TotalSalary</b></p>

                    }
                    <br />
                    <br />
                    <br />
                    <p>Other Salary Components:</p>
                    @foreach (SalaryComponents sC in ViewBag.SalaryComponents)
                    {
                        <p>@sC.ComponentName :  @sC.ComponentValue % </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


