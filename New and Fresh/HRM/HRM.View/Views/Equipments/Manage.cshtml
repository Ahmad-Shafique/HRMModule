@model IEnumerable<HRM.Entity.Equipment>

@{
    ViewBag.Title = "Equipment Management";
}

<div style="text-align: center" class="container">
    <h2>Equipment Management</h2> <hr />
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-info">
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EquipmentTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BuyPrice)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EquipmentTypeId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BuyPrice)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.EquipmentId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.EquipmentId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Back to main page", "Index" , null , new { @class="btn btn-default"})
            </div>
        </div>
    </div>
</div>






