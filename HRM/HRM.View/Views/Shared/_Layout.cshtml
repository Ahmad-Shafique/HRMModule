                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">Notice</a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("View notice", "Index", "Notices", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                                <li>
                                    @Html.ActionLink("Add notice", "Create", "Notices", new { area = "" }, new { @class = "navbar-brand" })
                                </li>

                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">Salary Payment</a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Salary management", "Index", "SalaryPayment", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">Employee Evaluation</a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Employee Evaluation", "Index", "EmployeeEvaluation", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">Equipments</a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Equipments management", "Index", "Equipments", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                            </ul>
                        </li>
                    </ul>

                    @*<ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
