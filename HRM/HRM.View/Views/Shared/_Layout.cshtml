                                <li>
                                    @Html.ActionLink("Show employees", "Display", "Employee", new { area = "" }, new { @class = "navbar-brand" })
                                </li>
                                <li>
                                    @Html.ActionLink("Add employeee", "Create", "Employee", new { area = "" }, new { @class = "navbar-brand" })
